# ===========================================
# Task Management API - Environment Configuration
# ===========================================
# Copy this file to .env and update values for your environment

# ===========================================
# Application Configuration
# ===========================================
APP_NAME="Task Management API"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# ===========================================
# Database Configuration
# ===========================================
# Development (SQLite)
DATABASE_URL=sqlite:///./task_api.db
TEST_DATABASE_URL=sqlite:///./test_task_api.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# PostgreSQL specific (for Docker)
POSTGRES_DB=taskapi
POSTGRES_USER=taskapi_user
POSTGRES_PASSWORD=secure_password_change_me

# ===========================================
# Security Configuration
# ===========================================
# IMPORTANT: Generate a secure secret key for production
# You can generate one with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# CORS Configuration
# ===========================================
# Development
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:3000"]

# Production (update with your actual domains)
# CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# Monitoring
# ===========================================
GRAFANA_PASSWORD=admin_change_me

# ===========================================
# Feature Flags
# ===========================================
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=false