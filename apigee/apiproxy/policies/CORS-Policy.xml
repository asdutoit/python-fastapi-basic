<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<CORS name="CORS-Policy">
    <DisplayName>CORS Policy</DisplayName>
    <AllowOrigins>{request.header.origin}</AllowOrigins>
    <AllowMethods>GET,PUT,POST,DELETE,OPTIONS</AllowMethods>
    <AllowHeaders>origin,x-requested-with,accept,content-type,authorization,cache-control,pragma,expires</AllowHeaders>
    <ExposeHeaders>*</ExposeHeaders>
    <MaxAge>3600</MaxAge>
    <AllowCredentials>true</AllowCredentials>
    <GeneratePreflightResponse>true</GeneratePreflightResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</CORS>